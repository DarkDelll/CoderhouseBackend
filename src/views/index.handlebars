<div>
    <h2>Lista de Productos</h2>
    <h4>Bienvenido {{rol.rol}}</h4>
    <span>{{user.name}}</span>
    <span>{{user.email}}</span>
    <a href="/logout">cerrar sesión</a>
    {{#each resultado.docs}}
        <div>
            <hr size="2px" color="black" />
            <p>Id: {{this._id}} </p>
            <p>Nombre: {{this.title}}</p>
            <p>Precio: {{this.price}} </p>
            <form action="http://localhost:8080/api/carts/644856f9e30a2ac0adb5da26/product/{{this._id}}" method="POST">
                <button type="submit">añadir producto</button>
            </form> 
        </div>
    {{/each}}
</div>
<div>
    {{#if resultado.hasPrevPage}}
        <a href={{resultado.prevLink}}> Anterior</a>
    {{/if}}
    &nbsp;
    {{resultado.page}}
    &nbsp;
     {{#if resultado.hasNextPage}}
        <a href={{resultado.nextLink}}>Siguiente </a>
    {{/if}} 
</div>