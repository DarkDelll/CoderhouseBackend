<div>
    {{#each users}}
        <div>
            <hr size="2px" color="black" />
            <p>Id: {{this._id}} </p>
            <p>Nombre: {{this.name}}</p>
            <p>Email: {{this.email}} </p>
            <p>Rol: {{this.role}} </p>
